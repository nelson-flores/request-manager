{
    "name": "flores/request-manager",
    "description": "A simple HTTP request manager using cURL",
    "keywords": ["http", "request", "curl", "http client"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nelson Flores",
            "email": "nelson.flores@live.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "autoload": {
        "psr-4": {
            "Flores\\RequestManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Flores\\RequestManager\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "test": "phpunit"
    }
}
